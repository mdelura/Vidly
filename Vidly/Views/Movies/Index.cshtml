@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(movie.Name, nameof(Vidly.Controllers.MoviesController.Details), new { id = movie.Id })
            </td>
            <td>
                @movie.Genre.Name
            </td>
        </tr>
    }
</table>

